.login
  %h1= 'Sign in'

  = form_for(:session, :url => sessions_path, :html => { :id => 'signin-form' }) do |f|
    .field
      = f.label :username
      %br
      = f.text_field :username

    .field
      = f.label :password
      %br
      = f.password_field :password

    .actions
      = f.submit "Sign in"
