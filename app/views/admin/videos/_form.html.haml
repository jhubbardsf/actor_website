= form_for @admin_video, :html => { :multipart => true, :class => "new-item-form" } do |f|
  - if @admin_video.errors.any?
    #error_explanation
      %h2= "#{pluralize(@admin_video.errors.count, "error")} prohibited this admin_video from being saved:"
      %ul
        - @admin_video.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
    .clear
  .field
    = f.label :youtube_url
    = f.text_field :youtube_url
    .clear
  .field
    = f.label :thumbnail
    = f.file_field :thumbnail
    .clear
  .actions
    = f.submit 'Save'
