= form_for @admin_link do |f|
  - if @admin_link.errors.any?
    #error_explanation
      %h2= "#{pluralize(@admin_link.errors.count, "error")} prohibited this admin_link from being saved:"
      %ul
        - @admin_link.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :link
    = f.text_field :link
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
